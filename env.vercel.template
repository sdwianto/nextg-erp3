# Vercel Environment Variables Template
# Copy these to Vercel Dashboard > Settings > Environment Variables

# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Environment
NODE_ENV=production

# Build Mode
BUILD_MODE=minimal

# API and WebSocket URLs (Production)
NEXT_PUBLIC_BACKEND_URL=https://[YOUR-VERCEL-DOMAIN].vercel.app/api
NEXT_PUBLIC_WS_URL=wss://[YOUR-VERCEL-DOMAIN].vercel.app
NEXT_PUBLIC_FRONTEND_URL=https://[YOUR-VERCEL-DOMAIN].vercel.app

# Skip environment validation
SKIP_ENV_VALIDATION=true

# Supabase Configuration (optional)
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
